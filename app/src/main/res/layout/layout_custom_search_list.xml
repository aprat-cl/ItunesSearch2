<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_arte"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_cancion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff4080ff"
                android:textColor="#ffffffff"
                android:text="Canción #1"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/item_banda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff80a0ff"
                android:textColor="#ffffffff"
                android:text="Canción #1"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/item_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffa0a0a0"
                android:textColor="#ffffffff"
                android:text="Canción #1"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>